<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/authorSize">

    <ImageView
        android:id="@+id/bookCover"
        android:layout_width="@dimen/imageWidth"
        android:layout_height="@dimen/imageHeight"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/cover_image"
        android:gravity="center"
        android:src="@drawable/bookicon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/BookDetails"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/titleSize"
            tools:text="@string/placeholder_title" />

        <TextView
            android:id="@+id/subTitle"
            style="@style/BookDetails"
            android:fontFamily="sans_serif_medium"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/subTitleSize"
            tools:text="@string/placeholder_subtitle" />

        <TextView
            android:id="@+id/author"
            style="@style/BookDetails"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/authorSize"
            tools:text="@string/placeholder_author" />

    </LinearLayout>

</LinearLayout>